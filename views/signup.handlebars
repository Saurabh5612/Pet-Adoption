  <!-- Signup Modal -->
   <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="signup_modal_title">New User Signup</h5>
        </div>
        <div class="input-group flex-nowrap">
          <span class="input-group-text" id="addon-wrapping"></span>
          <input type="text" class="form-control" placeholder="Username" aria-label="Username" id="signup_username" aria-describedby="addon-wrapping">
