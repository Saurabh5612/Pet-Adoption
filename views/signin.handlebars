<!-- Signin Modal -->
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="signin_modal_title">User Sign In</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <form id="signin" name="signin" class="login-form">
        <div class="form-group">
          <input type="email" class="form-control" id="signin-email" placeholder="Enter email">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" id="signin-password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
        <a href="/signup" class="login-signup">Never Been Here Before? Sign Up Here!</a>            
      </form>
    </div>
  </div>
</div>

    <script src="/js/signin.js"></script>